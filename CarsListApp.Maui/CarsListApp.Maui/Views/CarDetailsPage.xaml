<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarsListApp.Maui.Views.CarDetailsPage"
             xmlns:vm="clr-namespace:CarsListApp.Maui.ViewModels"
             x:DataType="vm:CarDetailsViewModel"
             Title="{Binding Car.Make}">

    <StackLayout>
        <StackLayout BackgroundColor="AliceBlue">
            <Label Text="{Binding Car.Make}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" FontSize="Medium"/>
            <Label Text="{Binding Car.Model}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" FontSize="Medium"/>
            <Label Text="{Binding Car.Vin}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" FontSize="Medium"/>
        </StackLayout>
    </StackLayout>

</ContentPage>